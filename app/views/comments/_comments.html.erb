<h3>Comments</h3>
<% @post.comments.each do |comment| %>

    <div class="card">
        <h5 class="card-header">
            <%= comment.username  %>
        </h5>
        <div class="card-body">
            <p class="card-text">
                <%= comment.body  %>
            </p>
        </div>
    </div>

    <% end %>